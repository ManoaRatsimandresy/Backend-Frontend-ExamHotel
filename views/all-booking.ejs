<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">

	<link href='https://unpkg.com/boxicons@2.0.9/css/boxicons.min.css' rel='stylesheet'>
	<link rel="stylesheet" href="css/style.css">
	<link rel="stylesheet" href="../bootstrap-4.6.2-dist/css/bootstrap.css">
	

	<title>Admin hotel saphir</title>
</head>
<body>


	<!-- SIDEBAR -->
	<section id="sidebar">
		<a href="#" class="brand px-5">
			<span class="text">Hotel Saphir</span>
		</a>
		<ul class="side-menu top">
			<li>
				<a href="/index.ejs">
					<i class='bx bxs-dashboard' ></i>
					<span class="text">Dashboard</span>
				</a>
			</li>
			<li class="active">
				<a href="all-booking.ejs">
					<i class='bx bxs-shopping-bag-alt' ></i>
					<span class="text">Booking</span>
				</a>
			</li>
			<li>
				<a href="all-room.ejs">
					<i class='bx bxs-doughnut-chart' ></i>
					<span class="text">Rooms</span>
				</a>
			</li>
			<li>
				<a href="all-employee.ejs">
					<i class='bx bxs-group' ></i>
					<span class="text">Employee</span>
				</a>
			</li>
		</ul>
		<ul class="side-menu">
			
			<li>
				<a href="#" class="logout">
					<i class='bx bxs-log-out-circle' ></i>
					<span class="text">Logout</span>
				</a>
			</li>
		</ul>
	</section>
    <section id="content">
		<!-- NAVBAR -->
		<nav>
			<i class='bx bx-menu' ></i>
			<a href="#" class="nav-link">Categories</a>
			<form action="#">
				<div class="form-input">
					<input type="search" placeholder="Search...">
					<button type="submit" class="search-btn"><i class='bx bx-search' ></i></button>
				</div>
			</form>
		
		</nav>
		<!-- NAVBAR -->

		<!-- MAIN -->
		<main>
			<h1 class="p-4">Liste des reservations</h1>
        <ul class="list-group">
		<table class="table table-striped table-hover">

			<thead>

				<tr>
					<th scope="col">First name</th>
					<th scope="col">Last name</th>
					<th scope="col">Date of entry</th>
					<th scope="col">Release date</th>
					<th scope="col">Email</th>
					<th scope="col">Room type</th>


				</tr>
			</thead>
				<% reservations.forEach(reservation => { %>
					
						<tbody>
							<tr>
								<td> <%= reservation.first_name  %> </td>
								<td> <%= reservation.last_name  %> </td>
								<td> <%= reservation.start_timestamp %> </td>
								<td> <%= reservation.end_timestamp  %> </td>
								<td> <%= reservation.email  %> </td>
								<td> <%= reservation.name %> </td>
							</tr>
						</tbody>
					
				<% }); %>
		</table>
		
            
        </ul>
        	</main>
		<!-- MAIN -->
	</section>
	<!-- CONTENT -->
    
	<script src="js/script.js"></script>
</body>
</html>