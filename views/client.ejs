                    <h2 class="mr-5">Search available Rooms</h2>
                    <form action="/room_dispo" method="POST">
                        <div class="mb-3">
                            <label for="startDate" class="form-label">Date d'Entrée</label>
                            <input type="date" class="form-control" id="startDate" name="startDate" required>
                        </div>
                        <div class="mb-3">
                            <label for="endDate" class="form-label">Date de Sortie</label>
                            <input type="date" class="form-control" id="endDate" name="endDate" required>
                        </div>
                        <div class="mb-3">
                            <label for="city" class="form-label">Ville</label>
                            <div class="input-group">
                                <select class="wide" id="city" name="city" required>
                                    <option data-display="Place">Place</option>
                                    <option value="Toliara">Toliara</option>
                                    <option value="Morondava">Morondava</option>
                                    <option value="Fianarantsoa">Fianarantsoa</option>
                                    <option value="Antsirabe">Antsirabe</option>
                                    <option value="Tamatave">Tamatave</option>
                                    <option value="Antananarivo">Antananarivo</option>
                                    <option value="Majunga">Majunga</option>
                                    <option value="Antsiranana">Antsiranana</option>
                                    <option value="Sambava">Sambava</option>
                                    <option value="Manakara">Manakara</option>
                                </select>
                            </div>
                        </div>
                        <button type="submit" class="btn btn-primary">Rechercher</button>
                    </form>
                </div>

                <div class="result mb-5 hotel_booking_table">
                    <% if (availableRooms) { %>
                        <h2 class="mr-5">Chambres Disponibles</h2>
                        <div class="d-flex flex-wrap justify-content-between">
                            <% availableRooms.forEach(room => { %>
                                <div class="card mt-3">
                                    <div class="card-body">
                                        <h5 class="card-title">Chambre <%= room.id %></h5>
                                        <p class="card-text">Hôtel <%= room.id_hotel %></p>
                                        <p class="card-text">Type de chambre <%= room.room_type %></p>
                                        <p class="card-text">Prix de base <%= room.base_price %> AR</p>
                                        <form action="/book" method="POST">

                                            <button type="submit" class="btn btn-primary">book now</button>
                                        </form>
                                    </div>
                                </div>
                            <% }); %>
                            
                        </div>
                    <% } else { %>
                        <p>Aucune chambre disponible pour les critères de recherche spécifiés.</p>
                    <% } %>
                </div>
            </div>
